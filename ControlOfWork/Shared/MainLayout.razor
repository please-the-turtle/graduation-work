<MudDialogProvider />

<PageTitle>ControlOfWork</PageTitle>

<AuthorizeView>
    <Authorized>
        <TopBar />
        <MudMainContent>
            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </MudMainContent>
        <BottomBar />
    </Authorized>
