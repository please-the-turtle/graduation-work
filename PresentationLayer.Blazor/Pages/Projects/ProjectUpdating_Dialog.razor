@inherits ProjectUpdatingModel

<EditForm Model="ProjectData" OnValidSubmit="OnUpdateClickedAsync">
    <MudDialog>
        <DialogContent>
            <DataAnnotationsValidator />
            <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
                <MudTextField Label="Name" HelperText="Max. 100 characters"
                              @bind-Value="ProjectData.Name" For="@(() => ProjectData.Name)" />
                <MudTextField Label="Description" HelperText="Max. 500 characters" Lines="5"
                              @bind-Value="ProjectData.Description" For="@(() => ProjectData.Description)" />
            </MudStack>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">
                Cancel
            </MudButton>
            <MudButton Color="Color.Primary" Variant="Variant.Filled"
                       ButtonType="ButtonType.Submit" Disabled="IsUpdateButtonDisabled">
                @UpdateButtonText
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

