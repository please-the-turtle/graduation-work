@inherits ProjectAddingModel


<EditForm Model="NewProjectData" OnValidSubmit="OnCreateClickedAsync">
    <MudDialog>
        <DialogContent>
            <DataAnnotationsValidator />
            <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
                <MudTextField Label="Name" HelperText="Max. 100 characters"
                              @bind-Value="NewProjectData.Name" For="@(() => NewProjectData.Name)" />
                <MudTextField Label="Description" HelperText="Max. 500 characters" Lines="5"
                              @bind-Value="NewProjectData.Description" For="@(() => NewProjectData.Description)" />
            </MudStack>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">
                Cancel
            </MudButton>
            <MudButton Color="Color.Primary" Variant="Variant.Filled"
                       ButtonType="ButtonType.Submit" Disabled="IsCreateButtonDisabled">
                @CreateButtonText
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

