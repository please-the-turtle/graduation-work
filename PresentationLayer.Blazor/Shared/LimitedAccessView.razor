@using BuisnessLogicLayer.Projects
@using BuisnessLogicLayer.Users

@if (PrivilegedRoles != null && 
    RoleOnProject != null &&
    PrivilegedRoles.Contains<UserRoleName>(RoleOnProject.Role))
{
    @ChildContent
}

@code {
    [CascadingParameter(Name = "RoleOnProject")]
    public UserRoleOnProject RoleOnProject { get; set; } = null!;

    //[Parameter]
    //public EventCallback<UserRoleOnProject> RoleOnProjectChanged { get; set; }

    [Parameter]
    [EditorRequired]
    public UserRoleName[] PrivilegedRoles { get; set; } = null!;

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;
}
