@using BuisnessLogicLayer.Projects
@using BuisnessLogicLayer.Users

@if (RolesWithAccess != null && 
    RoleOnProject != null &&
    RolesWithAccess.Contains<UserRoleName>(RoleOnProject.Role))
{
    @ChildContent
}

@code {
    [CascadingParameter(Name = "RoleOnProject")]
    public UserRoleOnProject RoleOnProject { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public UserRoleName[] RolesWithAccess { get; set; } = null!;

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;
}
