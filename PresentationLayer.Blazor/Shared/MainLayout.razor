@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />

<PageTitle>ControlOfWork</PageTitle>

<AuthorizeView>
    <Authorized>
        <TopBar />
        <MudMainContent>
            <div class="main-content">
                @Body
            </div>
        </MudMainContent>
        <BottomBar />
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
    <Authorizing>
        <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Style="height: 100vh">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
            <MudText Typo="Typo.h6" Align="Align.Center">Authorizing...</MudText>
        </MudStack>
    </Authorizing>
</AuthorizeView>
