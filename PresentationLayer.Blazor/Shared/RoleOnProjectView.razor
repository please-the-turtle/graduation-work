@using BuisnessLogicLayer.Projects
@using BuisnessLogicLayer.Users

@inject AuthenticationStateProvider StateProvider

<CascadingValue Value="UserRoleOnProject" Name="RoleOnProject">
    @if (UserRoleOnProject != null)
    {
        @ChildContent
    }
</CascadingValue>

@code {
    [Parameter]
    [EditorRequired]
    public UserRoleOnProject UserRoleOnProject { get; set; } = null!;

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;
}